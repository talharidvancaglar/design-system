# Scope için registry ayarı
@talhacaglar:registry=https://registry.npmjs.org/

# Auth token ayarı (npm login ile aldığınız token)
//registry.npmjs.org/@talhacaglar/design-system:_authToken=${NPM_TOKEN}

# Paket ayarları
save-exact=true
package-lock=true

# Scope paketleri için public access
access=public

# Peer dependencies ayarı
legacy-peer-deps=true

# Strict SSL
strict-ssl=true

# Default visibility
visibility=public
